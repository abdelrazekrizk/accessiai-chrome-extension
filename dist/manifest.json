{
  "manifest_version": 3,
  "name": "AccessiAI - AI Accessibility Assistant",
  "version": "2.0.0",
  "description": "8-agent AI system for comprehensive web accessibility enhancement with privacy-first local processing",
  "author": "AccessiAI Team",
  "homepage_url": "https://github.com/accessiai/chrome-extension",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-64.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AccessiAI - AI Accessibility Assistant",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen",
    "tts"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "agents/*",
        "ui/*",
        "models/*",
        "data/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://huggingface.co;"
  },
  
  "minimum_chrome_version": "120"
}